{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-use-before-define": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "max-len": [
      "warn",
      {
        "code": 80
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true
      }
    ]
  }
}